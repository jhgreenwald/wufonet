<main id="main">

	<div class="container">
		<div class="row topspace">
			<div class="col-sm-8 col-sm-offset-2">
				<% for story in params[:news] %>											
					<%= story %>
					<article class="post">
						<header class="entry-header">
							<div class="entry-meta"> 
								<span class="posted-on"><time class="entry-date published" date="2013-09-27"><%= story[:date] %></time></span>			
							</div>
							<h1 class="entry-title"><a href="single.html" rel="bookmark"><%= story[:title] %></a></h1>
						</header>
						<div class="entry-content">
							<p><img alt="" src=<%= asset_path story[:image]%> ></p>
							<p><%= story[:body] %> <a href="single.html" class="more-link">Continue reading&#8230;</a></p>
						</div>
					</article>
				<% end %><!-- #post-## --> 
			</div> 
		</div>

		<center class="">
			<ul class="pagination">
				<% if params[:current] == 1 %>
					<li class="disabled"><a href="">&laquo;</a></li>
				<% else %>
					<li><a href="/news/<%= params[:current] - 1 %>">&laquo;</a></li>
				<% end %>

				<% for num in params[:pagenums] %>
					<% if num == params[:current] %>
						<li class="active"><a href=""><%= num %></a></li>
					<% else %>
						<li><a href="/news/<%= num %>"><%= num %></a></li>
					<% end %>
				<% end %>
				<li><a href="">&raquo;</a></li>
			</ul>
		</center>
	

	</div>	<!-- /container -->

</main>
